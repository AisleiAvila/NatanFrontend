modules = ["nodejs-20"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Natan Server"

[[workflows.workflow]]
name = "Run"
mode = "sequential"
author = 42556619

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "ng serve"

[[workflows.workflow]]
name = "Npm Install"
mode = "sequential"
author = 42556619

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install"

[[workflows.workflow]]
name = "Natan Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node simple-server.js"
waitForPort = 5000

[deployment]
run = ["sh", "-c", "npx ng serve --host 0.0.0.0 --port 5000 --disable-host-check"]

[[ports]]
localPort = 5000
externalPort = 80
