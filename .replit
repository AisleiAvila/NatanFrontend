modules = ["nodejs-20", "python-3.11"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Run"
mode = "sequential"
author = 42556619

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "ng serve"

[[workflows.workflow]]
name = "Npm Install"
mode = "sequential"
author = 42556619

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Ionic Server"

[[workflows.workflow]]
name = "Ionic Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node ionic-server.js"
waitForPort = 5002

[deployment]
run = ["sh", "-c", "npx ng serve --host 0.0.0.0 --port 5000 --disable-host-check"]

[[ports]]
localPort = 3000
externalPort = 3000

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5001
externalPort = 3001

[[ports]]
localPort = 5002
externalPort = 3002

[[ports]]
localPort = 8000
externalPort = 8000
